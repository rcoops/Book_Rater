<section class="card bg-light">
    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
    <section class="card-body">
        <div class="card-block">
            <div class="row justify-content-between">
                <div class="col-5">{{ form_row(form.firstName) }}</div>
                <div class="col-2">{{ form_row(form.initial) }}</div>
                <div class="col-5">{{ form_row(form.lastName) }}</div>
            </div>
        </div>
        <div class="card-text">{{ form_row(form.booksAuthored) }}</div>
    </section>
    <footer class="card-footer">{{ form_widget(form.submit, { 'label': submitText }) }}</footer>
    {{ form_end(form) }}
</section>
