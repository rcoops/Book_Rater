{{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
<div class="form-group row">
    <div class="col-md-5">
        {{ form_row(form.firstName) }}
    </div>
    <div class="col-md-2">
        {{ form_row(form.initial) }}
    </div>
    <div class="col-md-5">
        {{ form_row(form.lastName) }}
    </div>
</div>
<div class="form-group row">
    <div class="col-md-12">
        {{ form_row(form.booksAuthored) }}
    </div>
</div>
<div class="form-group row">
    <div class="col-md-12">
        {{ form_widget(form.submit, { 'label': submitText }) }}
    </div>
</div>
{{ form_end(form) }}