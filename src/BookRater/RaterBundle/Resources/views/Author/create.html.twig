{% extends 'BookRaterRaterBundle::layout.html.twig' %}

{% block title %}Create Author{% endblock %}
{% block header %}Add Author{% endblock %}
{% block body %}
    {{ form_start(form) }}
    <div class="form-group row">
        <div class="col-md-5">
            {{ form_row(form.firstName) }}
        </div>
        <div class="col-md-2">
            {{ form_row(form.initial) }}
        </div>
        <div class="col-md-5">
            {{ form_row(form.lastName) }}
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}