{% extends 'BookRaterRaterBundle::layout.html.twig' %}

{% block title %}Create Book{% endblock %}

{% block header %}
    <div class="row justify-content-between">
        <div class="col-xs-6">Create Book</div>
        <div class="col-xs-6 align-self-center">
            <button type="button" class="btn btn-success pull-right" data-toggle="modal"
                    data-target="#googleSearchModal">
                Google Books Search
            </button>
        </div>
    </div>
{% endblock %}
{% block body %}
    {{ include('@BookRaterRater/Book/_form.html.twig', {submitText: 'Create'}) }}
    <div class="modal" tabindex="-1" role="dialog" id="googleSearchModal">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Search Google Books</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form class="mb-3">
                        <div class="form-group row">
                            <label for="search-term" class="col-2 col-form-label">
                                <select id="query-type" class="form-control">
                                    <option value="isbn">ISBN-10</option>
                                    <option value="title">Title</option>
                                    <option value="author">Author</option>
                                </select>
                            </label>
                            <input name="search-term" id="search-term" type="text" class="col-8"/>
                            <div class="col-1 flex align-self-center">
                                <button type="button" class="btn btn-primary" onclick="getBooks()">Search</button>
                            </div>
                        </div>
                    </form>
                    <div class="form-group">
                        <select title="Results" id="search-results" class="form-control" style="display: none"></select>
                        <p id="search-fail" style="display: none">No Results!</p>
                        <div class="modal-footer">
                            <button id="accept" type="button" class="btn btn-success" data-dismiss="modal"
                                    style="display: none" onclick="updateForm()">
                                Accept
                            </button>
                            <button type="button" class="btn btn-danger" data-dismiss="modal">Cancel</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
{% endblock %}
