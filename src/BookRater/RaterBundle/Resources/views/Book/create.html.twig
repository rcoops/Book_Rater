{% extends 'BookRaterRaterBundle::layout.html.twig' %}

{% block title %}Create Book{% endblock %}

{% block header %}
    <div class="container">
        <div class="row justify-content-between">
            <div class="col-xs-6">
                Add Book
            </div>
            <div class="col-xs-6 align-self-center">
                <button type="button" class="btn btn-success pull-right" data-toggle="modal"
                        data-target="#googleSearchModal">
                    Search Google Books
                </button>
            </div>
        </div>
    </div>
{% endblock %}
{% block body %}
    {{ include('@BookRaterRater/Book/_form.html.twig', {submitText: 'Create'}) }}
    <div class="modal" tabindex="-1" role="dialog" id="googleSearchModal">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Search Google Books</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form class="mb-3">
                        <div class="form-group row pr-3">
                            <label for="search-term" class="col-sm-3 col-form-label">
                                <select id="query-type" class="form-control">
                                    <option value="isbn">ISBN-10</option>
                                    <option value="title">Title</option>
                                    <option value="author">Author</option>
                                </select>
                            </label>
                            <input name="search-term" id="search-term" type="text" class="col-sm-9" />
                        </div>
                        <button type="button" class="btn btn-primary"
                                onclick="getBooks($('#query-type').val(), $('#search-term').val())">
                            Search
                        </button>
                    </form>
                    <div class="form-group">
                        <select id="search-results" class="form-control" style="display: none">
                        </select>
                    <p id="search-fail" style="display: none">No Results!</p>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-success" data-dismiss="modal"
                                onclick="getBooks($('#query-type').val(), $('#search-term').val())">
                            Accept
                        </button>
                        <button type="button" class="btn btn-danger" data-dismiss="modal">Cancel</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script type="application/javascript">

        function getBooks(key, value) {
            console.log('https://www.googleapis.com/books/v1/volumes?q=' + key + ':' + value);

            $.ajax({
                url: 'https://www.googleapis.com/books/v1/volumes?q=' + key + ':' + value,
                success: function (json) {
                    console.log(json);
                    var searchResults = $('#search-results');
                    if (json.items.length === 0) {
                        $('#search-fail').show();
                        searchResults.hide();
                    } else {
                        $('#search-fail').hide();
                        searchResults.show();
                        searchResults
                            .find('option')
                            .remove()
                            .end();
                        $.each(json.items, function (i, item) {
                            var author = "";
                            if (typeof item.volumeInfo.authors !== 'undefined') {
                                author = ", (" + item.volumeInfo.authors[0] + ")";
                            }
                            $('#search-results').append($('<option>', {
                                value: item.volumeInfo.title,
                                text: item.volumeInfo.title + author
                            }));
                        });
                    }
                }
            });
        }
    </script>
{% endblock %}