{% extends "@BookRaterRater/layout.html.twig" %}

{% block title %}Unread Messages{% endblock %}

{% block header %}Unread Messages{% endblock %}

{% block body %}
    <div class="count">
        <span class="badge badge-pill">{{ pagination.getTotalItemCount }}</span>
    </div>
    <div class="navigation">
        {{ knp_pagination_render(pagination) }}
    </div>
    <table class="table table-striped">
        <thead>
        <tr>
            <th>Subject</th>
            <th>Message</th>
            <th>User</th>
            <th>Created</th>
        </tr>
        </thead>
        <tbody>
        {% for message in pagination %}
            <tr>
                <td>{{ message.subject }}</td>
                <td>{{ message.message }}</td>
                <td>{{ message.user.username }}</td>
                <td>{{ message.created | date('d-m-Y') }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {# display navigation #}
    <div class="navigation">
        {{ knp_pagination_render(pagination) }}
    </div>
{% endblock %}