<section class="card bg-light">
    {{ form_start(form) }}
    <section class="card-body">
        <div class="card-text">{{ form_row(form.title) }}</div>
        <div class="card-block">
            <div class="row justify-content-between">
                <div class="col-9">{{ form_row(form.book) }}</div>
                <div class="col-2">{{ form_row(form.rating) }}</div>
                <div class="col-1">{{ form_row(form.ratingNum) }}</div>
            </div>
        </div>
        <div class="card-text">{{ form_row(form.comments) }}</div>
    </section>
    <div class="card-footer">{{ form_widget(form.submit, { 'label': submitText }) }}</div>
    {{ form_end(form) }}
</section>
