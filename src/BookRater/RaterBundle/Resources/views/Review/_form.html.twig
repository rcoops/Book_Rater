{{ form_start(form) }}
<div class="form-group row">
    <div class="col-md-12">
        {{ form_row(form.review_title) }}
    </div>
    <div class="col-md-10">
        {{ form_row(form.bookReviewed) }}
    </div>
    <div class="col-md-2">
        {{ form_row(form.rating) }}
    </div>
</div>
<div class="form-group row">
    <div class="col-md-12">
        {{ form_row(form.reviewComments) }}
    </div>
</div>
<div class="form-group row">
    <div class="col-md-12">
        {{ form_widget(form.submit, { 'label': submitText }) }}
    </div>
</div>
{{ form_end(form) }}