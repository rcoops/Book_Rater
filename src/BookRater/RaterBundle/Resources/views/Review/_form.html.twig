{{ form_start(form) }}
<div class="form-group row">
    <div class="col-md-12">
        {{ form_row(form.title) }}
    </div>
    <div class="col-md-9">
        {{ form_row(form.book) }}
    </div>
    <div class="col-md-2">
        {{ form_row(form.rating) }}
    </div>
    <div class="col-md-1">
        {{ form_row(form.ratingNum) }}
    </div>
</div>
<div class="form-group row">
    <div class="col-md-12">
        {{ form_row(form.comments) }}
    </div>
</div>
<div class="form-group row">
    <div class="col-md-12">
        {{ form_widget(form.submit, { 'label': submitText }) }}
    </div>
</div>
{{ form_end(form) }}