{% extends "BookRaterRaterBundle::layout.html.twig" %}


{% block title %}Reviews{% endblock %}
{% block header %}Reviews{% endblock %}

{% block body %}
{# total items count #}
<div class="count">
    {{ pagination.getTotalItemCount }}
</div>
{% for review in pagination %}
    <article class="well well-sm">
        <h2><a href="{{ path('bookrater_book_view', {id : review.bookReviewed.id}) }}">
                {{ review.bookReviewed.title| title }}
            </a>
        </h2>
        <p>
            <b>Rating:</b>
            {% for i in 1..review.rating %}
                <i class="fa fa-star"></i>
            {% endfor %}
            {% for i in 1..(5 - review.rating) %}
                <i class="fa fa-star-o"></i>
            {% endfor %}
        </p>
        <p>{{ review.reviewComments| nl2br }}</p>
        <p><small>Created by {{ review.user }} at {{ review.created| date('H:i d/m/y') }}</small></p>
    </article>
{% endfor %}
{# display navigation #}
<div class="navigation">
    {{ knp_pagination_render(pagination) }}
</div>
{% endblock %}