{# app/Resources/views/base.html.twig #}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{% block title %}Book Rater{% endblock %} - Book Rater</title>
    {% block stylesheets %}
        {% stylesheets
        'https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css'
        '@css' %}
        <link href="{{ asset_url }} " type="text/css" rel="stylesheet"/>
        {% endstylesheets %}
    {% endblock %}
    {% block javascript %}
        {% javascripts
        'https://code.jquery.com/jquery-3.2.1.slim.min.js'
        'https://use.fontawesome.com/fca4c72f10.js'
        'https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js'
        'js/redirect.js' %}
        <script type="text/javascript" src="{{ asset_url }} "></script>
        {% endjavascripts %}
    {% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }} "/>
</head>
<body>
<div class="container">
    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <button type="button" class="navbar-toggle collapsed"
                    data-toggle="collapse"
                    data-target="#bs-example-navbar-collapse-1">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="{{ path('bookrater_home') }}">Book Rater</a>
            <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="{{ path('bookrater_about') }}">About  <i class="fa fa-question-circle"></i></a></li>
                    <li><a href="{{ path('bookrater_contact') }}">Contact <i class="fa fa-envelope-open"></i></a></li>
                    {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                        <li>
                            <a href="{{ path('fos_user_profile_edit') }}">
                                Profile <i class="fa fa-user-circle"></i>
                            </a>
                        </li>
                        <li>
                            <a href="{{ path('fos_user_security_logout') }}">
                                {{ 'layout.logout'|trans({}, 'FOSUserBundle') }} <i class="fa fa-sign-out"></i>
                            </a>
                        </li>
                    {% else %}
                        <li>
                            <a href="{{ path('fos_user_security_login') }}">
                                {{ 'layout.login'|trans({}, 'FOSUserBundle') }} <i class="fa fa-sign-in"></i>
                            </a>
                        </li>
                    {% endif %}
                </ul>
            </div>
        </div>
    </nav>
    <div class="row">
        <section class="col-md-8 col-xs-12">
            <header><h1>{% block header %}{% endblock %}</h1></header>
            {% block body %}
            {% endblock %}
        </section>
        <section class="col-md-4">
            {% block sidebar %}{% endblock %}
        </section>
    </div>
</div>

{% block footer %}
    <footer class="footer">
        <div class="container">
            <div class="row">
                <div class="col-xs-8">
                    <p>Book Rater <i class="fa fa-copyright"></i></p>
                </div>
                <div class="col-xs-4">
                    {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                        <p class="text-right">{{ 'layout.logged_in_as'|trans({'%username%': app.user.username}, 'FOSUserBundle') }}</p>
                    {% endif %}
                </div>
            </div>
        </div>
    </footer>
{% endblock %}
</body>
</html>